@page "/payment"

<PageTitle>Index</PageTitle>
<body id="page-top">
<header class="masthead">

    <div class="container">
        <div class="row align-items-center">
            <div class="col-4">
                <h2>Krepšelis</h2>
            </div>
        </div>
    </div>
</header>
<section class="h-100 h-custom" style="background-color: #eee;">
<div class="container py-5 h-100">
<div class="row d-flex justify-content-center align-items-center h-100">
<div class="col">
<div class="card">
<div class="card-body p-4">

<div class="row">

<div class="col-lg-12">
    <div class="card bg-primary text-white rounded-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="mb-0">Mokėjimo informacija</h5>
                <img alt="Avatar"
                     class="img-fluid rounded-3"
                     src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/avatar-6.webp"
                     style="width: 45px;">
            </div>

            <form class="mt-4">
                <div class="form-outline form-white mb-4">
                    <input class="form-control form-control-lg" id="typeName"
                           placeholder="Vardas"
                           size="17"
                           type="text"/>
                    <label class="form-label" for="typeName">Vardas</label>
                </div>

                <div class="form-outline form-white mb-4">
                    <input class="form-control form-control-lg" id="typeText" maxlength="19"
                           minlength="19"
                           placeholder="1234 5678 9012 3457" size="17" type="text"/>
                    <label class="form-label" for="typeText">Kortelės Nr.</label>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-outline form-white">
                            <input class="form-control form-control-lg" id="typeExp"
                                   maxlength="7" minlength="7" placeholder="MM/YYYY"
                                   size="7"
                                   type="text"/>
                            <label class="form-label" for="typeExp">Galiojimo data</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-outline form-white">
                            <input class="form-control form-control-lg" id="typeText"
                                   maxlength="3"
                                   minlength="3" placeholder="&#9679;&#9679;&#9679;"
                                   size="1" type="password"/>
                            <label class="form-label" for="typeText">CSC/CVV</label>
                        </div>
                    </div>
                </div>
            </form>

            <hr class="my-4">

            <div class="d-flex justify-content-between">
                <p class="mb-2">Iš viso:</p>
                <p class="mb-2">€4818.00</p>
            </div>

            <button class="btn btn-info btn-block btn-lg" type="button">
                <div class="d-flex justify-content-between">
                    <span>Sumokėti <i class="fas fa-long-arrow-alt-right ms-2"></i></span>
                </div>
            </button>
        </div>
    </div>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
</section>
</body>
